<% layout('layout') -%>
    <blockquote>
      <p>STEP 2: Guess the Movie by screenshot </p>
    </blockquote>

    <form action="/result" method="post" id="account">
            <% for(var i=0; i<data.length; i++) {%>
                <div class="row-fluid" style="margin-bottom: 50px;">
                    <div class="span8">
                        <img class="img-polaroid" src="<%= data[i].screenshot %>">
                    </div>
                    <div class="span4">
                        <% for(var j=0; j<data[i].options.length; j++) {%>
                                <label class="radio">
                                    <input type="radio" name="m[m<%= data[i].mid %>]" value="<%=j+1 %>">
                                        <%= data[i].options[j] %>
                                </label>
                        <% } %>
                    </div>
                </div>
            <% } %> 
                <div class="row-fluid" style="margin-bottom: 50px;">
                    <div class="span4 offset8">
                        <button type="submit" class="btn btn-large btn-danger">Submit</button>
                    </div>
                </div>
    </form>
